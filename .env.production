# EDFlow AI Production Environment Configuration
# Copy this to .env and update with your production values

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================
DEPLOYMENT_MODE=production
LOG_LEVEL=INFO
API_PORT=8080
API_HOST=0.0.0.0

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Generate a strong secret key for JWT tokens
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# API Keys for external integrations (comma-separated)
VALID_API_KEYS=api-key-1,api-key-2,api-key-3

# ============================================================================
# ANTHROPIC CLAUDE API
# ============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# AGENT CONFIGURATION (Production Seeds)
# ============================================================================
# Use unique, secure seeds for production deployment
ED_COORDINATOR_SEED=prod_ed_coordinator_seed_001
RESOURCE_MANAGER_SEED=prod_resource_manager_seed_001
SPECIALIST_COORDINATOR_SEED=prod_specialist_coordinator_seed_001
LAB_SERVICE_SEED=prod_lab_service_seed_001
PHARMACY_SEED=prod_pharmacy_seed_001
BED_MANAGEMENT_SEED=prod_bed_management_seed_001

# ============================================================================
# DATABASE CONFIGURATION (if using external database)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/edflow_ai
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# MONITORING AND LOGGING
# ============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log file paths
LOG_FILE_PATH=/app/logs/edflow-ai.log
AUDIT_LOG_PATH=/app/logs/audit.log

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
AI_RESPONSE_TIMEOUT_SECONDS=5
AGENT_COMM_TIMEOUT_SECONDS=2
MAX_CONCURRENT_PATIENTS=100
MAX_WEBSOCKET_CONNECTIONS=500

# Rate limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MINUTES=15

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# WebSocket allowed origins
WEBSOCKET_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# SSL/TLS CONFIGURATION
# ============================================================================
# SSL certificate paths (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/edflow-ai.crt
SSL_KEY_PATH=/etc/ssl/private/edflow-ai.key

# ============================================================================
# BACKUP AND RECOVERY
# ============================================================================
# Backup configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# ============================================================================
# HEALTH CHECK CONFIGURATION
# ============================================================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features
ENABLE_AUTHENTICATION=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS_COLLECTION=true
ENABLE_DEMO_MODE=false

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================
# Hospital system integrations (if applicable)
# HOSPITAL_SYSTEM_API_URL=https://hospital-api.example.com
# HOSPITAL_SYSTEM_API_KEY=your-hospital-api-key

# Notification services
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password