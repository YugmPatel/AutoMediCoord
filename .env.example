# EDFlow AI Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# DEPLOYMENT MODE
# ============================================================================
# Set to 'local' for local testing or 'agentverse' for production deployment
DEPLOYMENT_MODE=agentverse

# ============================================================================
# ANTHROPIC CLAUDE API
# ============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ============================================================================
# LETTA API (for persistent agent memory)
# ============================================================================
# Get your API key from: https://www.letta.com/
# Sign up at: https://cloud.letta.com/
LETTA_API_KEY=letta-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Optional: Set to 'false' to disable Letta integration
LETTA_ENABLED=true

# ============================================================================
# AGENT SEEDS (Change these for your deployment)
# ============================================================================
# These are used to generate consistent agent addresses
# You can use any unique string for each agent
ED_COORDINATOR_SEED=ed_coordinator_seed_001
RESOURCE_MANAGER_SEED=resource_manager_seed_001
SPECIALIST_COORDINATOR_SEED=specialist_coordinator_seed_001
LAB_SERVICE_SEED=lab_service_seed_001
PHARMACY_SEED=pharmacy_seed_001
BED_MANAGEMENT_SEED=bed_management_seed_001
WHATSAPP_NOTIFICATION_SEED=whatsapp_notification_seed_001

# ============================================================================
# WHATSAPP CONFIGURATION (Optional - for real WhatsApp integration)
# ============================================================================
# Get these from Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
WHATSAPP_ENABLED=true

# ============================================================================
# LOCAL TESTING PORTS (Not used in Agentverse mode)
# ============================================================================
ED_COORDINATOR_PORT=8000
RESOURCE_MANAGER_PORT=8001
SPECIALIST_COORDINATOR_PORT=8002
LAB_SERVICE_PORT=8003
PHARMACY_PORT=8004
BED_MANAGEMENT_PORT=8005
WHATSAPP_NOTIFICATION_PORT=8006

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO