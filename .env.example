# Anthropic Claude AI API Key
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Agentverse API Key
# Get your API key from: https://agentverse.ai → Profile → API Keys
AGENTVERSE_API_KEY=your_agentverse_api_key_here

# Agent Seeds (for consistent addresses)
# Generate unique phrases for each agent or use these examples
ED_COORDINATOR_SEED=ed_coordinator_recovery_phrase_2025
RESOURCE_MANAGER_SEED=resource_manager_recovery_phrase_2025
SPECIALIST_COORDINATOR_SEED=specialist_coordinator_recovery_phrase_2025
LAB_SERVICE_SEED=lab_service_recovery_phrase_2025
PHARMACY_SEED=pharmacy_recovery_phrase_2025
BED_MANAGEMENT_SEED=bed_management_recovery_phrase_2025

# Agent Ports (for local development only)
ED_COORDINATOR_PORT=8000
RESOURCE_MANAGER_PORT=8001
SPECIALIST_COORDINATOR_PORT=8002
LAB_SERVICE_PORT=8003
PHARMACY_PORT=8004
BED_MANAGEMENT_PORT=8005

# Deployment Mode
# Options: local, agentverse
DEPLOYMENT_MODE=local

# Logging Configuration
LOG_LEVEL=INFO

# Performance Targets
AI_RESPONSE_TIMEOUT_SECONDS=2
AGENT_COMM_TIMEOUT_SECONDS=1

# System Configuration
MAX_CONCURRENT_PATIENTS=50